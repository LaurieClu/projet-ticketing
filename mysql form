CREATE TABLE USER (
    `id` int AUTO_INCREMENT PRIMARY KEY,
    `name` VARCHAR(20) NOT NULL DEFAULT '',
    `surname` VARCHAR(20) NOT NULL DEFAULT '',
    `birthday` DATE,
    `email` VARCHAR(20) NOT NULL,
    `password` VARCHAR(20)
);


